		{
			"name": "Messages",
			"item": [
				{
					"name": "Add Message",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response has message data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('id');",
									"    pm.expect(jsonData).to.have.property('sessionId');",
									"    pm.expect(jsonData).to.have.property('sender');",
									"    pm.expect(jsonData).to.have.property('content');",
									"    ",
									"    // Store message ID for later use",
									"    pm.environment.set(\"messageId\", jsonData.id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-API-Key",
								"value": "{{apiKey}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"sender\": \"user\",\n    \"content\": \"Hello, how can you help me today?\",\n    \"context\": \"{\\\"retrievedDocuments\\\": [{\\\"id\\\": \\\"doc1\\\", \\\"relevanceScore\\\": 0.95, \\\"excerpt\\\": \\\"Sample document content\\\"}]}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/sessions/{{sessionId}}/messages",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"sessions",
								"{{sessionId}}",
								"messages"
							]
						},
						"description": "Adds a new message to a session. Sender must be one of: 'user', 'assistant', or 'system'. Content must not exceed 10,000 characters. Context is optional and can be a JSON string (max 50KB)."
					},
					"response": []
				},
				{
					"name": "Get Messages (Paginated)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has pagination data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('messages');",
									"    pm.expect(jsonData).to.have.property('page');",
									"    pm.expect(jsonData).to.have.property('size');",
									"    pm.expect(jsonData).to.have.property('totalElements');",
									"    pm.expect(jsonData).to.have.property('totalPages');",
									"    pm.expect(jsonData.messages).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{apiKey}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/sessions/{{sessionId}}/messages?page=0&size=20",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"sessions",
								"{{sessionId}}",
								"messages"
							],
							"query": [
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed, default: 0)"
								},
								{
									"key": "size",
									"value": "20",
									"description": "Page size (default: 20, max: 100)"
								}
							]
						},
						"description": "Retrieves messages from a session with pagination. Messages are returned in chronological order (oldest first)."
					},
					"response": []
				}
			],
			"description": "Message management endpoints for adding and retrieving messages within a session."
