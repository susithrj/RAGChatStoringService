# RAG Chat Storage Microservice - Development Environment Variables

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Primary API Key for authentication
API_KEY_PRIMARY=codegenesis

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Secondary API Key for zero-downtime rotation (optional)
# Leave empty if not using key rotation
API_KEY_SECONDARY=codegenesis-bkp

# Spring Profile - Development
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limit per API key (requests per minute)
RATE_LIMIT_API_KEY_PER_MINUTE=10

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# H2 Database file path (relative to application working directory)
H2_DATABASE_PATH=./data/ragchat

# Enable H2 Console - ENABLED for development
ENABLE_H2_CONSOLE=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
SERVER_PORT=8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level - DEBUG for development
LOG_LEVEL=DEBUG

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Load sample data on startup - ENABLED for development
# Set to 'false' to disable sample data loading
LOAD_SAMPLE_DATA=true
